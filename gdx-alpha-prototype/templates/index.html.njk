{% extends "base.html.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block pageTitle %}GDX - Login{% endblock %}

{% block content %}
    <h1 class="govuk-heading-xl">GDX</h1>
    <p class="govuk-body">Welcome to the GDX prototype.</p>

    {{ govukWarningText({
      text: "This is a mock up of how the GDX user experiance might work, not a functioning production service.",
      iconFallbackText: "Warning"
    }) }}

<form method=post action="/login">
{{ govukInput({
    label: {
        text: "Username"
    },
    classes: "govuk-!-width-one-third",
    id: "user",
    name: "user"
}) }}

{{ govukButton({
    text: "Continue",
    preventDoubleClick: true
}) }}
</form>

{% endblock %}

